<div class="page-header"><h3>Notifications</h3></div>

<% if session.key? :current_user %>



    <% unless @email and @email.length > 3 %>
        <div class="alert alert-warning" role="alert">Your email address is not configured.
          To receive email notifications enter your address in the <a href="<%= profile_url %>">profile</a> page.</div>
    <% end %>



    <table data-toggle="table" data-striped="true" data-search="true">
      <thead>
      <tr>
        <th>Date et heure</th>
        <th>Titre</th>
        <th>Message</th>
      </tr>
      </thead>
      <tbody>
      <% @notifications.each do |notification| %>
          <tr>
            <td><%= notification.created_at %></td>
            <td><%= notification.notetitle %></td>
            <td><%= notification.message %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

<% else %>
    <div class="row">
      <div class="col-lg-12"><p>Sign in to view you notifications.</p></div>

    </div>
<% end %>