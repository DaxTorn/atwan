<div class="page-header"><h3>Notifications</h3></div>

<% if session.key? :current_user %>
    <table data-toggle="table" data-striped="true" data-search="true">
      <thead>
      <tr>
        <th>Date et heure</th>
        <th>Titre</th>
        <th>Message</th>
      </tr>
      </thead>
      <tbody>
      <% @notifications.each do |notification| %>
          <tr>
            <td><%= notification.created_at %></td>
            <td><%= notification.notetitle %></td>
            <td><%= notification.message %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

<% else %>
    <div class="row">
      <div class="col-lg-12"><p>Veuillez vous identifier pour voir vos notifications.</p></div>

    </div>

<% end %>