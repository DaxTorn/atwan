<div class="page-header"><h3>Enregistrement</h3></div>

<form method="post" action="<%= url_for(action: :create, controller: 'user') %>">

  <div class="panel panel-default">
    <div class="panel-body">

      <div class="form-group">
        <label for="username">Nom d'utilisateur</label>
        <input class="form-control" type="text" name="username" id="username"/>
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input class="form-control" type="email" name="email" id="email"/>
      </div>
      <div class="form-group">
        <label for="steamid">ID Steam</label>
        <input class="form-control" type="text" name="steamid" id="steamid"/>
      </div>
      <div class="form-group">
        <label for="password">Mot de passe</label>
        <input class="form-control" type="password" name="password" id="password"/>
      </div>
      <div class="form-group">
        <label for="cpassword">Confirmation du mot de passe</label>
        <input class="form-control" type="password" name="cpassword" id="cpassword"/>
      </div>


    </div>
  </div>
  <div class="text-right">
    <button type="submit" class="btn btn-success">Valider</button>
  </div>
</form>
