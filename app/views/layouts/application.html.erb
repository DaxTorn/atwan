<!DOCTYPE html>
<html>
<head>
  <title>ARK Trip Wire Alarm Notification</title>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>
  <div class="container">
    <div class="top-nav">

      <% if session.key? :current_user %>

          <div class="btn-group">
            <button type="button" class="btn btn-link dropdown-toggle" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
              <%= session[:current_user]['nickname'] %> <span class="caret"></span>
            </button>
            <ul class="dropdown-menu dropdown-menu-right">
              <li><a href="#"></a></li>
              <li><a href="<%= profile_url %>">Profile</a></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to 'DÃ©connexion', 'sign-out' %></li>
            </ul>
          </div>

      <% else %>
          <div class="btn-group" role="group">
            <div class="btn-group">
              <button class="btn btn-link dropdown-toggle" type="button" id="dropdownMenu1"
                      data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">Sign in
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
                <li>
                  <div class="login-dropdown">
                    <p><b>Sign in through Steam</b></p>
                    <%= link_to image_tag('https://steamcommunity-a.akamaihd.net/public/images/signinthroughsteam/sits_01.png'), root_url + 'auth/steam' %>
                    <p><b>Or</b></p>
                    <form action="<%= url_for(action: 'login', controller: 'user') %>" method="post">

                      <div class="form">
                        <input type="text" name="username" placeholder="Username" class="form-control"/>
                        <input type="password" name="password" placeholder="Password" class="form-control"/>
                        <button type="submit" class="btn btn-primary">Sign in</button>
                      </div>
                    </form>
                  </div>
                </li>
              </ul>
            </div>
            <a href="<%= url_for(action: 'new', controller: 'user') %>" class="btn btn-link">Sign up</a>
          </div>

      <% end %>
    </div>
    <div class="site-title"><a href="<%= root_path %>">ARK Trip Wire Alarm Notification</a></div>
    <div class="site-subtitle">Notifications dashboard</div>
  </div>
</header>

<div class="container">
  <%= yield %>
</div>

</body>
</html>
